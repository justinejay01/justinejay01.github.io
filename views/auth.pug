extends layout

block content
  .container
    .row
      .col-lg-4
      .col-lg-4
        #panelLogin
          .card.mx-auto.my-4
            .card-header
              h4.card-title Log In
            form#formLogin(action='javascript:void(0);' method='post')
              .card-body
                #loginSuccess.alert.alert-success.animate__animated.d-none
                  | Logging in... Click 
                  a(href='/') here
                  |  if you&apos;re not redirected!
                #loginFailed.alert.alert-danger.animate__animated.d-none
                  | Incorrect login credentials!
                .input-group
                  #svgUname.input-group-text
                    svg.bi.bi-person-circle(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                      path(d='M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z')
                      path(fill-rule='evenodd' d='M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z')
                  input#loginUname.form-control(type='text' name='loginUname' placeholder='Enter username...' required='')
                br
                .input-group
                  #svgPword.input-group-text
                    svg.bi.bi-key(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                      path(d='M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z')
                      path(d='M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z')
                  input#loginPword.form-control(type='password' name='loginPword' placeholder='Enter password...' required='')
              .card-footer
                .btn-toolbar.justify-content-between
                  .button-group(role='button')
                    input#btnloginLogin.btn.btn-primary.btn-block(type='submit' value='Log In')
                  .button-group
                    button#btnloginReg.btn.btn-outline-success.btn-block(type='button' value='Register')
                      | Register 
                      svg.bi.bi-arrow-right(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                        path(fill-rule='evenodd' d='M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z')
        #panelReg.d-none
          .card.mx-auto.my-4
            .card-header
              h4.card-title Register
            form#formReg(action='javascript:void(0);' method='post')
              .card-body
                #regSuccess.alert.alert-success.animate__animated.d-none
                  | Successful! Click 
                  a(href='/') here
                  |  to log in!
                #regExist.alert.alert-danger.animate__animated.d-none
                  | Username already exist!
                #regFailed.alert.alert-danger.animate__animated.d-none
                  | Error creating your account! Reload this page or contact
                  | website administrator!
                .input-group
                  #svgUname.input-group-text
                    svg.bi.bi-person-circle(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                      path(d='M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z')
                      path(fill-rule='evenodd' d='M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z')
                  input#regUname.form-control(type='text' name='regUname' placeholder='Enter username...' required='')
                br
                .input-group
                  #svgEmail.input-group-text
                    svg.bi.bi-envelope(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                      path(d='M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2zm13 2.383l-4.758 2.855L15 11.114v-5.73zm-.034 6.878L9.271 8.82 8 9.583 6.728 8.82l-5.694 3.44A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.739zM1 11.114l4.758-2.876L1 5.383v5.73z')
                  input#regEmail.form-control(type='text' name='regEmail' placeholder='Enter e-mail address...' required='')
                br
                .input-group
                  #svgPword.input-group-text
                    svg.bi.bi-key(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                      path(d='M0 8a4 4 0 0 1 7.465-2H14a.5.5 0 0 1 .354.146l1.5 1.5a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0L13 9.207l-.646.647a.5.5 0 0 1-.708 0L11 9.207l-.646.647a.5.5 0 0 1-.708 0L9 9.207l-.646.647A.5.5 0 0 1 8 10h-.535A4 4 0 0 1 0 8zm4-3a3 3 0 1 0 2.712 4.285A.5.5 0 0 1 7.163 9h.63l.853-.854a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.646-.647a.5.5 0 0 1 .708 0l.646.647.793-.793-1-1h-6.63a.5.5 0 0 1-.451-.285A3 3 0 0 0 4 5z')
                      path(d='M4 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0z')
                  input#regPword.form-control(type='password' name='regPword' placeholder='Enter password...' required='')
              .card-footer
                .btn-toolbar.justify-content-between
                  .button-group(role='button')
                    button#btnregLogin.btn.btn-outline-success.btn-block(type='button')
                      svg.bi.bi-arrow-left(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewbox='0 0 16 16')
                        path(fill-rule='evenodd' d='M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z')
                      |  Log In
                  .button-group
                    input#btnregReg.btn.btn-primary.btn-block(type='submit' value='Register')
              
